<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ScrollPane?>
<AnchorPane fx:controller="Controller" xmlns:fx="http://javafx.com/fxml">

    <AnchorPane fx:id="title"
                AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="750"
                style="-fx-background-color: #f4f4f4; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">

        <Label fx:id="title_text" AnchorPane.leftAnchor="20" AnchorPane.bottomAnchor="15" style="-fx-font-size: 450%"
               text="College Metrics"/>

    </AnchorPane>
    <AnchorPane fx:id="filters"
                AnchorPane.topAnchor="100" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="600" AnchorPane.bottomAnchor="530"
                style="-fx-background-color: #dcd0c0; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">
        <Label AnchorPane.leftAnchor="10" AnchorPane.topAnchor="15" style="-fx-font-size: 150%" text="Filters" />
        <!-- DESIGNATION TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="45" style="-fx-font-size: 115%" text="Type:" />
        <ToggleButton fx:id="publicButton" text="Public" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="40" onAction="#unselectButtonsPublic"/>
        <ToggleButton fx:id="privateButton" text="Private" AnchorPane.leftAnchor="130" AnchorPane.topAnchor="40" onAction="#unselectButtonsPrivate"/>
        <ToggleButton fx:id="anyDesignationButton" text="Any" AnchorPane.leftAnchor="195" AnchorPane.topAnchor="40" onAction="#unselectButtonsAnyDesignation"/>
        <!-- STATE TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="85" style="-fx-font-size: 115%" text="State:" />
        <TextField fx:id="stateField" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="70" />
        <!-- ENROLLMENT TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="125" style="-fx-font-size: 115%" text="Size:" />
        <ToggleButton fx:id="underButton" text="Under 5,000" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="120" onAction="#unselectButtonsUnderEnroll"/>
        <ToggleButton fx:id="overButton" text="Over   5,000" AnchorPane.leftAnchor="70" AnchorPane.topAnchor="155" onAction="#unselectButtonsOverEnroll"/>
        <ToggleButton fx:id="anyEnrollmentButton" text="Any" AnchorPane.leftAnchor="175" AnchorPane.topAnchor="155" onAction="#unSelectButtonsAnyEnroll"/>
    </AnchorPane>
    <AnchorPane fx:id="metrics"
                AnchorPane.topAnchor="320" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="600" AnchorPane.bottomAnchor="50"
                style="-fx-background-color: #f4f4f4; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">
        <Label AnchorPane.leftAnchor="10" AnchorPane.topAnchor="15" style="-fx-font-size: 150%" text="Metrics" />
        <Label AnchorPane.leftAnchor="15" AnchorPane.topAnchor="40" style="-fx-font-size: 100%" text="Weigh each category" />
        <Label AnchorPane.leftAnchor="15" AnchorPane.topAnchor="55" style="-fx-font-size: 100%" text="based on importance" />
        <!-- TUITION TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="85" style="-fx-font-size: 115%" text="Tuition:" />
        <TextField fx:id="tuition" AnchorPane.topAnchor="80" style="-fx-font-size: 115%" AnchorPane.leftAnchor="160" AnchorPane.rightAnchor="40" />
        <Label text="\%" style="-fx-font-size: 115%" AnchorPane.topAnchor="85" AnchorPane.rightAnchor="20" />
        <!-- MIDPOINT ACT TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="135" style="-fx-font-size: 115%" text="Midpoint ACT:" />
        <TextField fx:id="act" AnchorPane.topAnchor="130" style="-fx-font-size: 115%" AnchorPane.leftAnchor="160" AnchorPane.rightAnchor="40" />
        <Label text="\%" style="-fx-font-size: 115%" AnchorPane.topAnchor="135" AnchorPane.rightAnchor="20" />
        <!-- ACCEPTANCE RATE TEXT AND BUTTONS -->
        <Label AnchorPane.leftAnchor="20" AnchorPane.topAnchor="185" style="-fx-font-size: 115%" text="Acceptance Rate:" />
        <TextField fx:id="acceptanceRate" AnchorPane.topAnchor="180" style="-fx-font-size: 115%" AnchorPane.leftAnchor="160" AnchorPane.rightAnchor="40" />
        <Label text="\%" style="-fx-font-size: 115%" AnchorPane.topAnchor="185" AnchorPane.rightAnchor="20" />

        <Label fx:id="errorText" style="-fx-font-size: 115%" AnchorPane.topAnchor="230" AnchorPane.leftAnchor="30" textFill="red" />
    </AnchorPane>
    <ScrollPane style="-fx-background:#c7ad88;"
                AnchorPane.topAnchor="100" AnchorPane.leftAnchor="250" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0" >
        <AnchorPane fx:id="results" />
    </ScrollPane>
    <AnchorPane fx:id="bottom"
                AnchorPane.topAnchor="800" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="600" AnchorPane.bottomAnchor="0"
                style="-fx-background-color: #373737; -fx-border-color:black; -fx-border-width:1px 0px 1px 0px;">
        <Button text="Start Over" AnchorPane.leftAnchor="15" AnchorPane.topAnchor="10" onAction="#onStartOverButton"/>
        <Button text="Rank Colleges" AnchorPane.leftAnchor="115" AnchorPane.topAnchor="10" onAction="#onRankCollegesButton"/>

    </AnchorPane>
</AnchorPane>
